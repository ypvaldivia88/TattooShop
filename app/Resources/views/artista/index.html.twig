{% extends 'base.html.twig' %}
{% block title %}Artistas{% endblock %}
{% block breadcrumb %}
<h3 class="text-themecolor m-b-0 m-t-0">Artistas</h3>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item active">Artistas</li>
</ol>
{% endblock %}

{% block body %}

<div class="card">
    <div class="card-header">
        <h2>Listado de artistas</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="DT_Artistas" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for artista in artistas %}
                    <tr>
                        <td>{{ artista.nombre }}</td>
                        <td>
                            <div class="button-group">
                                <a title="Detalles" href="{{ path('artistas_show', { 'id': artista.id }) }}" class="btn btn-xs btn-info"><i class="fa fa-eye"></i></a>
                                <a title="Editar" href="{{ path('artistas_edit', { 'id': artista.id }) }}" class="btn btn-xs btn-warning"><i class="fa fa-edit"></i></a>
                                <a title="Eliminar" href="{{ path('artistas_delete', { 'id': artista.id }) }}" class="btn btn-xs btn-danger"><i class="fa fa-eraser"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}                                          
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <a href="{{ path('artistas_new') }}" class="btn waves-effect waves-light btn-primary"><i class="fa fa-plus"></i> Crear nuevo artista</a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
    <!-- This is data table -->
    <script src="{{ asset('public/plugins/datatables/jquery.dataTables.min.js') }}"></script>

    <script>
    $(document).ready(function() {
        $('#DT_Artistas').DataTable();
    });
    </script>

{% endblock %}