{% extends 'base.html.twig' %}
{% block title %}Tipos de Trabajo{% endblock %}
{% block breadcrumb %}
<h3 class="text-themecolor m-b-0 m-t-0">Tipos de Trabajo</h3>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item active">Tipos de Trabajo</li>
</ol>
{% endblock %}

{% block body %}

<div class="card">
    <div class="card-header">
        <h2>Listado de Tipos de Trabajo</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="DT_TipoTrabajo" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in tipoTrabajos %}
                    <tr>
                        <td>{{ item.nombre }}</td>
                        <td>
                            <div class="button-group">
                                <a title="Detalles" href="{{ path('tipos-trabajo_show', { 'id': item.id }) }}" class="btn btn-xs btn-info"><i class="fa fa-eye"></i></a>
                                <a title="Editar" href="{{ path('tipos-trabajo_edit', { 'id': item.id }) }}" class="btn btn-xs btn-warning"><i class="fa fa-edit"></i></a>
                                <a title="Eliminar" href="{{ path('tipos-trabajo_delete', { 'id': item.id }) }}" class="btn btn-xs btn-danger"><i class="fa fa-eraser"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}                                          
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <div class="button-group">
            <a href="{{ path('tipos-trabajo_new') }}" class="btn waves-effect waves-light btn-primary"><i class="fa fa-plus"></i> Crear nuevo Tipo de Trabajo</a>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
    <!-- This is data table -->
    <script src="{{ asset('public/plugins/datatables/jquery.dataTables.min.js') }}"></script>

    <script>
    $(document).ready(function() {
        $('#DT_TipoTrabajo').DataTable();
    });
    </script>

{% endblock %}