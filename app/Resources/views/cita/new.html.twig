{% extends 'base.html.twig' %}
{% block title %}Crear Cita{% endblock %}
{% block breadcrumb %}
<h3 class="text-themecolor m-b-0 m-t-0">Crear Cita</h3>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item"><a href="{{ path('cita_index') }}">Citas</a></li>
    <li class="breadcrumb-item active">Crear</li>
</ol>
{% endblock %}

{% block body %}

<div class="card">

    <div class="card-header">
        <h2>Crear Cita</h2>
    </div>
    
    <div class="card-body">

        {{ form_start(form, { 'attr' : {'role' : 'form', 'class' : 'form-material m-t-40'} }) }}
                
        <div class="form-group">
            {{ form_widget(form.fecha, { 'attr' :{'class' : 'form-control'} }) }}
            <span class="text-danger">{{ form_errors(form.fecha) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(form.deposito, { 'attr' :{'class' : 'form-control', 'placeholder' : 'Dep√≥sito'} }) }}
            <span class="text-danger">{{ form_errors(form.deposito) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(form.cliente, { 'attr' : {'class' : 'form-control select2-single', 'placeholder' : 'Elija el cliente'} }) }}
            <span class="text-danger">{{ form_errors(form.cliente) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(form.tipo_trabajo, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Elija el tipo de trabajo'} }) }}
            <span class="text-danger">{{ form_errors(form.tipo_trabajo) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(form.artista, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Elija el artista'} }) }}
            <span class="text-danger">{{ form_errors(form.artista) }}</span>
        </div>

    </div>

    <div class="card-footer">

        <div class="button-group">
            {{ form_widget(form.save, {'label' : 'Guardar cita', 'attr' : {'class' : 'btn waves-effect waves-light btn-success'}}) }}
            <a href="{{ path('cita_index') }}" class="btn waves-effect waves-light btn-secondary">Ir al Listado</a>
        </div>
        
    </div>

    {{ form_end(form) }}
</div>    
{% endblock %}
