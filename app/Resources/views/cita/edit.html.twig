{% extends 'base.html.twig' %}
{% block title %}Editar Cita{% endblock %}
{% block breadcrumb %}
<h3 class="text-themecolor m-b-0 m-t-0">Editar Cita</h3>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item"><a href="{{ path('cita_index') }}">Citas</a></li>
    <li class="breadcrumb-item active">Editar</li>
</ol>
{% endblock %}

{% block body %}

<div class="card">

    <div class="card-header">
        <h2>Editar Cita</h2>
    </div>

    <div class="card-body">

        {{ form_start(edit_form, { 'attr' : {'role' : 'form', 'class' : 'form-material m-t-40'} }) }}

        <div class="form-group">
            {{ form_widget(edit_form.fecha|date('Y-m-d'), { 'attr' :{'class' : 'mdate'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.fecha) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.deposito, { 'attr' :{'class' : 'form-control', 'placeholder' : 'Dep√≥sito'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.deposito) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.cliente, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Elija el cliente'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.cliente) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.tipo_trabajo, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Elija el tipo de trabajo'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.tipo_trabajo) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.artista, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Elija el artista'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.artista) }}</span>
        </div>

    </div>

    <div class="card-footer">

        <div class="button-group">
            {{ form_widget(edit_form.save, {'label' : 'Guardar cita', 'attr' : {'class' : 'btn waves-effect waves-light btn-success'}})
            }}
            <a href="{{ path('cita_index') }}" class="btn waves-effect waves-light btn-secondary">Ir al Listado</a>
        </div>

    </div>

    {{ form_end(edit_form) }}
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('public/plugins/moment/moment.js') }}"></script>
<script src="{{ asset('public/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js') }}">
</script>
{% endblock %}

{% block stylesheets %}
<!-- Date picker plugins css -->
<link href="{{ asset('public/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css') }}"
    rel="stylesheet">
<script>
    // MAterial Date picker    
    $('.mdate').bootstrapMaterialDatePicker({
        weekStart: 0,
        time: false
    });
</script>
{% endblock %}