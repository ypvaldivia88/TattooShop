{% extends 'base.html.twig' %}
{% block title %}Citas
{% endblock %}
{% block breadcrumb %}
	<h3 class="text-themecolor m-b-0 m-t-0">Citas</h3>
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Inicio</a>
		</li>
		<li class="breadcrumb-item active">Citas</li>
	</ol>
{% endblock %}

{% block body %}

	<div class="card">
		<div class="card-header">
			<h2>Listado de Citas</h2>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table id="datatable" class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Id</th>
							<th>Fecha</th>
							<th>Deposito</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						{% for item in citas %}
							<tr>
								<td>
									<a href="{{ path('cita_show', { 'id': item.id }) }}">{{ item.id }}</a>
								</td>
								<td>{{ item.fecha|date('Y-m-d') }}</td>
								<td>{{ item.deposito }}</td>
								<td>
									<div class="button-group">
										<a title="Detalles" href="{{ path('cita_show', { 'id': item.id }) }}" class="btn btn-xs btn-info">
											<i class="fa fa-eye"></i>
										</a>
										<a title="Editar" href="{{ path('cita_edit', { 'id': item.id }) }}" class="btn btn-xs btn-warning">
											<i class="fa fa-edit"></i>
										</a>
										<a title="Eliminar" href="{{ path('cita_delete', { 'id': item.id }) }}" class="btn btn-xs btn-danger">
											<i class="fa fa-eraser"></i>
										</a>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		<div class="card-footer">
			<a href="{{ path('cita_new') }}" class="btn waves-effect waves-light btn-primary">
				<i class="fa fa-plus"></i>
				Crear nueva cita</a>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<!-- This is data table -->
	<script src="{{ asset('public/plugins/datatables/jquery.dataTables.min.js') }}"></script>

	<script>
		$(document).ready(function () {
            $('#datatable').DataTable();
        });
	</script>

{% endblock %}
