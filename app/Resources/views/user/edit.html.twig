{% extends 'base.html.twig' %}
{% block title %}Editar usuario{% endblock %}
{% block breadcrumb %}
<h3 class="text-themecolor m-b-0 m-t-0">Usuarios</h3>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item"><a href="{{ path('user_index') }}">Usuarios</a></li>
    <li class="breadcrumb-item active">Editar</li>
</ol>
{% endblock %}

{% block body %}

<div class="card">

    <div class="card-header">
        <h2>Editar usuario</h2>
    </div>
    
    <div class="card-body">

        {{ form_start(edit_form, { 'attr' : {'role' : 'form', 'class' : 'form-material m-t-40'} }) }}
                
        <div class="form-group">
            {{ form_widget(edit_form.username, { 'attr' :{'class' : 'form-control', 'placeholder' : 'Entre el usuario'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.username) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.firstName, { 'attr' :{'class' : 'form-control', 'placeholder' : 'Entre el Nombre(s)'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.firstName) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.lastName, { 'attr' :{'class' : 'form-control', 'placeholder' : 'Entre el Apellido(s)'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.lastName) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.email, { 'attr' :{'class' : 'form-control', 'placeholder' : 'Entre el Correo electrónico'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.email) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.password, { 'attr' :{'class' : 'form-control', 'placeholder' : 'Entre el Contraseña'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.password) }}</span>
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.role, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Elija el rol'} }) }}
            <span class="text-danger">{{ form_errors(edit_form.role) }}</span>
        </div>

        <div class="demo-checkbox">
            <span class="text-danger">{{ form_errors(edit_form.isActive) }}</span>
            {{ form_widget(edit_form.isActive) }}
            {{ form_label(edit_form.isActive) }}
        </div>       
        
    </div>

    <div class="card-footer">
        <div class="button-group">
            {{ form_widget(edit_form.save, {'label' : 'Guardar usuario', 'attr' : {'class' : 'btn waves-effect waves-light btn-success'}}) }}
            <a href="{{ path('user_index') }}" class="btn waves-effect waves-light btn-secondary">Ir al Listado</a>
        </div>
    </div>

    {{ form_end(edit_form) }}
</div>    
{% endblock %}