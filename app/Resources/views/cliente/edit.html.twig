{% extends 'base.html.twig' %}
{% block title %}Editar Cliente{% endblock %}
{% block breadcrumb %}
<h3 class="text-themecolor m-b-0 m-t-0">Clientes</h3>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item"><a href="{{ path('clientes_index') }}">Clientes</a></li>
    <li class="breadcrumb-item active">Editar</li>
</ol>
{% endblock %}

{% block body %}

<div class="card">

    <div class="card-header">
        <h2>Editar cliente</h2>
    </div>
    
    <div class="card-body">

        {{ form_start(form, { 'attr' : {'role' : 'form', 'class' : 'form-material m-t-40'} }) }}
                
        <div class="col-md-6">
            <div class="form-group">
                {{ form_widget(form.nombre, { 'attr' :{'class' : 'form-control', 'placeholder' : 'Nombre'} }) }}
                <span class="text-danger">{{ form_errors(form.nombre) }}</span>
            </div>
        </div>   

        <div class="col-md-6">
            <div class="form-group">
                {{ form_widget(form.telefono, { 'attr' :{'class' : 'form-control', 'placeholder' : 'Tel√©fono'} }) }}
                <span class="text-danger">{{ form_errors(form.nomtelefonobre) }}</span>
            </div>
        </div>  
        
    </div>

    <div class="card-footer">
        <div class="button-group">
            {{ form_widget(form.save, {'label' : 'Guardar cliente', 'attr' : {'class' : 'btn waves-effect waves-light btn-success'}}) }}
            <a href="{{ path('clientes_index') }}" class="btn waves-effect waves-light btn-secondary">Ir al Listado</a>
        </div>
    </div>

    {{ form_end(form) }}
</div>    
{% endblock %}

