{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pago list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Fechainicial</th>
                <th>Fechafinal</th>
                <th>Efectivo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pago in pagos %}
            <tr>
                <td><a href="{{ path('pago_show', { 'id': pago.id }) }}">{{ pago.id }}</a></td>
                <td>{{ pago.fechaInicial }}</td>
                <td>{{ pago.fechaFinal }}</td>
                <td>{{ pago.efectivo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('pago_show', { 'id': pago.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('pago_edit', { 'id': pago.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pago_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
